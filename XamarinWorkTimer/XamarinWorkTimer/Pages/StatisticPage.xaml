<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:elements="clr-namespace:XamarinWorkTimer.Pages.Elements"
             x:Class="XamarinWorkTimer.Pages.StatisticPage"
             Padding="5">
  <Grid x:Name="grid">
    <Grid.RowDefinitions>
      <RowDefinition Height="9*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackLayout Grid.Row="1">
      <BoxView Color="Silver" 
               WidthRequest="100"
               HeightRequest="2"/>
      <elements:NavigationLine x:Name="navigationLine"/>
    </StackLayout>
  </Grid>

</ContentPage>